---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<BaseLayout title={`404 - ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <h1
      class="mb-4 bg-gradient-to-r from-emerald-400 to-cyan-400 bg-clip-text text-9xl font-bold text-transparent"
    >
      404
    </h1>
    <h2 class="mb-6 text-3xl font-bold">Page Not Found</h2>
    <p class="mx-auto mb-8 max-w-md text-zinc-400">
      The page you are looking for might have been removed, had its name changed, or is temporarily
      unavailable.
    </p>
    <a
      href="/"
      class="rounded-full bg-white px-6 py-3 font-bold text-zinc-950 transition-colors hover:bg-zinc-200"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
