---
import { SOCIAL_LINKS } from '../consts';
const today = new Date();
---

<footer class="py-12 border-t border-white/5 bg-zinc-950/50 mt-auto">
    <div class="max-w-4xl mx-auto px-4 flex flex-col items-center gap-6">
        <div class="flex gap-6">
            {SOCIAL_LINKS.map(link => (
                <a href={link.url} target="_blank" class="text-zinc-500 hover:text-white transition-colors">
                    <span class="sr-only">{link.label}</span>
                    <span class="font-medium text-xs uppercase tracking-wider">{link.label}</span>
                </a>
            ))}
        </div>
        <p class="text-zinc-600 text-sm">
            &copy; {today.getFullYear()} Renato Sugimoto. All rights reserved.
        </p>
    </div>
</footer>
