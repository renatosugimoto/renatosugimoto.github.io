---
import { SOCIAL_LINKS } from '../consts';
const today = new Date();
---

<footer class="mt-auto border-t border-white/5 bg-zinc-950/50 py-12">
  <div class="mx-auto flex max-w-4xl flex-col items-center gap-6 px-4">
    <div class="flex gap-6">
      {
        SOCIAL_LINKS.map((link) => (
          <a
            href={link.url}
            target="_blank"
            class="text-zinc-500 transition-colors hover:text-white"
          >
            <span class="sr-only">{link.label}</span>
            <span class="text-xs font-medium tracking-wider uppercase">{link.label}</span>
          </a>
        ))
      }
    </div>
    <p class="text-sm text-zinc-600">
      &copy; {today.getFullYear()} Renato Sugimoto. All rights reserved.
    </p>
  </div>
</footer>
