---
import { SITE_TITLE } from '../consts';
---

<header class="fixed top-0 z-50 w-full border-b border-white/5 bg-zinc-950/80 backdrop-blur-md">
  <div class="mx-auto flex h-16 max-w-4xl items-center justify-between px-4">
    <a
      href="/"
      class="font-heading bg-gradient-to-r from-emerald-400 to-cyan-400 bg-clip-text text-xl font-bold text-transparent transition-opacity hover:opacity-80"
    >
      {SITE_TITLE}
    </a>
    <nav class="flex gap-6 text-sm font-medium text-zinc-400">
      <a href="/" class="transition-colors hover:text-white">Home</a>
      <a href="/blog" class="transition-colors hover:text-white">Blog</a>
    </nav>
  </div>
</header>
<div class="h-16"></div>
